{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020",
      "ES2017",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts",
  ]
}